<h1>Student #<%= @student.id %></h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <strong>Name</strong>:<br />
    <p><%= @student.name %></p>       

    <div class="list-group">
      <strong> Enrolled in: Courses</strong>:<br />
      <p><% @student.enrollments.each do |enrollment| %></p>
      <a href="#" class="list-group-item ">
        <h4 class="list-group-item-heading"><%= enrollment.course.try(:name) %></h4>  
      </a>
      <% end %>
      <br />
      <strong>Email</strong>:<br />
      <p><%= @student.email %></p>
    </div>
    <a href="/students/<%= @student.id %>/edit">Edit</a> |
    <a href="/students/<%= @student.id %>/destroy">Destroy</a>
  </div>