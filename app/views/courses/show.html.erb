<h2>Course #<%= @course.id %></h2>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">  
         Students Enrolled in: <%= @course.name %>
      </h3>
    </div>  
    <div class="panel-body">
      <% @course.enrollments.each do |enrollment| %>
      <a href="#" class="list-group-item ">
        <h4 class="list-group-item-heading"><%= enrollment.student.try(:name) %></h4>  
      </a>
      <% end %>
    </div>
  </div>
<p />
<a href="/courses/<%= @course.id %>/edit"> &nbsp; Edit </a> |
<a href="/courses/<%= @course.id %>/destroy"> &nbsp; Destroy</a>

